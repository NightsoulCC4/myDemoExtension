{
    "name": "mydemoExtension",
    "description": "my ext",
    "version": "0.2.0",
    "manifest_version": 2,
    "icons":{
        "16": "icons/GazeGuard_16x16.png",
        "32": "icons/GazeGuard_32x32.png",
        "48": "icons/GazeGuard_48x48.png",
        "128": "icons/GazeGuard_128x128.png"
    },
    "background":{
        "page": "./views/background.html",
        "persistent": false
    },
    "foreground":{
        "page": "./views/foreground.html",
        "persistent": false
    },
    "options_page": "./options.html",
    "browser_action": {
        "default_popup": "./popup/popup.html"
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "edge://settings/passwords",
        "http://localhost/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./database/firebase.js"],
            "css": ["./css/app.css"],
            "run_at": "document_end"
        }
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
